{
  "manifest_version": 3,
  "name": "Price Changer",
  "description": "This extension will find a price div and replace it with a custom value.",
  "version": "1.0",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}
